//Confeccione un algoritmo que lea un número e indique si este es 
//positivo o negativo 

Algoritmo PositivoNegativo
	
	//Variables
	real = numero1
	
	
	//Cuerpo
	escribir( "Introduzca un numero: " )
	leer numero1
	
	si(numero1 = 0)
		escribir("El numero es 0")
	FinSi
	
	si(numero1 > 0)
		escribir("El numero es positivo")
	finSi
	
	si(numero1 < 0)
		escribir("El numero es negativo")
	FinSi


	
FinAlgoritmo
